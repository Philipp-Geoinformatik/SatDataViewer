    <!-- MAVEN WAR PLUGIN -->
    <packaging>war</packaging>
    <build>
        <finalName>ROOT</finalName>
    </build>

    <repositories>

        <repository>
            <id>nexus-public-releases</id>
            <name>PForge Nexus Public Releases</name>
            <url>https://pforge.eso-io.com/nexus/content/groups/public</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>

        <repository>
            <id>nexus-public-snapshots</id>
            <name>PForge Nexus Public Snapshots</name>
            <url>https://pforge.eso-io.com/nexus/content/groups/public-snapshots</url>
            <layout>default</layout>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

        <repository>
            <id>nexus-astrium-releases</id>
            <name>PForge Nexus Astrium Releases</name>
            <url>https://pforge.eso-io.com/nexus/content/repositories/releases</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>

        <repository>
            <id>nexus-astrium-snapshots</id>
            <name>PForge Nexus Astrium Snapshots</name>
            <url>https://pforge.eso-io.com/nexus/content/repositories/snapshots</url>
            <layout>default</layout>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>

    </repositories>




